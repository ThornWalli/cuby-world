:root {
  --font-base: 'Open Sans', sans-serif;
  --color-cuby-primary: #0066FF;
  --rgb-color-cuby-primary: 0, 102, 255;
  --color-cuby-secondary: #000000;
  --rgb-color-cuby-secondary: 0, 0, 0;
  --color-cuby-tertiary: #FFFFFF;
  --rgb-color-cuby-tertiary: 255, 255, 255;
  --color-cuby-quaternary: #FF0000;
  --rgb-color-cuby-quaternary: 255, 0, 0;

  --color-white: #FFFFFF;
  --rgb-white: 255, 255, 255;
  --color-black: #000000;
  --rgb-black: 0, 0, 0;

  /* blue  */
  --color-blue-0: #edf8ff;
  --color-blue-1: #d6efff;
  --color-blue-2: #b5e4ff;
  --color-blue-3: #83d5ff;
  --color-blue-4: #48bcff;
  --color-blue-5: #1e9aff;
  --color-blue-6: #067aff;
  --color-blue-7: #0066ff;
  --color-blue-8: #084ec5;
  --color-blue-9: #0d469b;
  --color-blue-10: #0e2b5d;

  /* red */
