  --color-red-1: #ffdddd;
  --color-red-2: #ffc0c0;
  --color-red-3: #ff9494;
  --color-red-4: #ff5757;
  --color-red-5: #ff2323;
  --color-red-6: #ff0000;
  --color-red-7: #d70000;
  --color-red-8: #b10303;
  --color-red-9: #920a0a;
  --color-red-10: #500000;

  /* grreen */
  --color-green-0: #f0fff4;
  --color-green-1: #dcffe4;
  --color-green-2: #b7ffc9;
  --color-green-3: #7afc9c;
  --color-green-4: #3ef66e;
  --color-green-5: #17e34a;
